x = int(input("Enter the number: "))
print("All the squares are:")
number = 1
while number <= x:
    print(number**2)
    number += 1
sqr1 = 2
print("All the even squares are :")
while sqr1 <= number:
    print(sqr1 * sqr1)
    sqr1 += 2

